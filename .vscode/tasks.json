{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "xslt",
			"label": "sample usage of ext:print() function",
			"saxonJar": "${config:XSLT.tasks.saxonJar}",
			"xsltFile": "${workspaceFolder}/sample/test-serialize.xsl",
			"xmlSource": "${workspaceFolder}/sample/data.xml",
			"resultPath": "${workspaceFolder}/sample/result/data-out.xml",
			"allowSyntaxExtensions40": "off",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"messageEscaping": "adaptive",
			"problemMatcher": [
				"$saxon-xslt"
			]
		},
		{
			"type": "xslt",
			"label": "test",
			"saxonJar": "${config:XSLT.tasks.saxonJar}",
			"xsltFile": "${workspaceFolder}/test/context-free-nodes.xsl",
			"xmlSource": "${workspaceFolder}/sample/data.xml",
			"resultPath": "${workspaceFolder}/sample/result/data-out2.xml",
			"allowSyntaxExtensions40": "off",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"messageEscaping": "adaptive",
			"problemMatcher": [
				"$saxon-xslt"
			]
		},
		{
			"type": "xslt-js",
			"label": "xslt-js: Saxon-JS Transform (New)",
			"xsltFile": "${command:xslt-xpath.pickXsltFile}",
			"xmlSource": "${file}",
			"resultPath": "${command:xslt-xpath.pickResultFile}",
			"group": {
				"kind": "build"
			},
			"problemMatcher": [
				"$saxon-xslt-js"
			]
		}
	]
}